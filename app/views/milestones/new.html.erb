<h1>Add a Milestone</h1>

<%= form_tag "/kids/#{@kid.id}/milestones", method: :post do %>
  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>
  <div>
    <%= label_tag :date %>
    <%= text_field_tag :date, nil, placeholder: "Ex: June 1, 2016" %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>

<!-- Add Image -->

  <%= submit_tag "Submit" %>
<% end %>
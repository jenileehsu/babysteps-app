<p align="right"><%= link_to "Back to #{@kid.first_name}'s Timeline", "/kids/#{@kid.id}" %><br><br>
<% if current_user %>
  <%= link_to "Edit Milestone", "/kids/#{@kid.id}/milestones/#{@milestone.id}/edit" %><br>
  <%= link_to "Add More Photos", "/kids/#{@kid.id}/milestones/#{@milestone.id}/images/new" %>
<% end %></p>

<h1><%= @kid.first_name %></h1>

<p><%= @milestone.title %></p>
<p><%= @milestone.date.strftime("%B %d, %Y") %></p>
<p><%= @milestone.description %></p>

<% @milestone.images.each do |image| %>
  <%= image_tag image.avatar.url %><br><br>
<% end %>
<br>

<h3>Comments</h3>
<% @milestone.comments.each do |comment| %>
  <%= comment.name %><br>
  <%= comment.text %><br><br>
<% end %>

<%= form_tag "/kids/#{@kid.id}/milestones/#{@milestone.id}/comments", method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :comment %>
    <%= text_field_tag :text %>
  </div>

  <%= submit_tag "Submit" %>
<% end %>

<% if current_user %>

  <br>

  <%= form_tag "/kids/#{@kid.id}/milestones/#{@milestone.id}", method: :delete do %>
    <input class="btn btn-default" type="submit" value="Delete Milestone">
  <% end %>

<% end %>

<br>



